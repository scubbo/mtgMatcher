<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="200dp" android:layout_height="wrap_content"
              android:text="Currently enrolled tournament:"/>
    <TextView android:layout_width="200dp" android:layout_height="wrap_content"
              android:id="@+id/currentEnrolledTournamentDisplay"/>

    <TextView android:layout_width="200dp" android:layout_height="wrap_content"
              android:text="Enroll by text entry..."/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
              android:hint="Enter the address given by your store"
              android:id="@+id/enterEnrolledTournamentEditText" />
    <Button android:layout_width="160dp" android:layout_height="wrap_content"
              android:text="Enroll"
              android:onClick="enrollByTextEntry"/>

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:text="OR"/>

    <Button android:layout_width="160dp" android:layout_height="wrap_content"
              android:text="Click here to scan a QR Code"
              android:onClick="startQRScanner"
              android:id="@+id/qrScannerButton"/>

</LinearLayout>